# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL connection details for multi-tenant ERP system
# For local development: Leave DATABASE_URL commented out to use SQLite
# For production (Render): DATABASE_URL is automatically set by Render
# DATABASE_URL=postgresql://user:password@host:port/database

# SQLite (Local Development - Default)
# No configuration needed - uses billing.db file automatically

# PostgreSQL (Production - Render)
# Render automatically provides DATABASE_URL environment variable
# Format: postgresql://username:password@hostname:port/database_name
# Example: postgresql://bizpulse_user:password@dpg-xxxxx.oregon-postgres.render.com:5432/bizpulse_erp

DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=erp_user
DB_PASSWORD=erp_password
DB_NAME=erp_database

# JWT Configuration
# Secret keys for authentication - MUST be changed in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
# Rate limiting and API versioning
API_PREFIX=api/v1
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=debug

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000